<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    tools:context=".giaodien.ThongTinChung">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_thang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_thang"
            style="@style/TextStyle"
            android:hint="Tháng"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_nam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_nam"
            style="@style/TextStyle"
            android:hint="Năm"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_giahongheo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_giahongheo"
            style="@style/TextStyle"
            android:hint="Đơn giá hộ nghèo"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_giabinhthuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_giabinhthuong"
            style="@style/TextStyle"
            android:hint="Đơn giá bình thường"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_giacoquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_giacoquan"
            style="@style/TextStyle"
            android:hint="Đơn giá cơ quan"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_giasanxuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_giasanxuat"
            style="@style/TextStyle"
            android:hint="Đơn giá sản xuất"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_kinhdoanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_giakinhdoanh"
            style="@style/TextStyle"
            android:hint="Đơn giá kinh doanh"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_gianuocthai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_gianuocthai"
            style="@style/TextStyle"
            android:hint="Đơn giá nước thải"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_chapnhan"
        style="@style/ButtonStyle"
        android:layout_gravity="center"
        android:onClick="ChapNhan"
        android:text="Chấp nhận" />


</LinearLayout>