<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".giaodien.ThemSuaKhachHang"
    android:orientation="vertical">


    <TextView
        style="@style/TitleStyle"
        android:layout_marginTop="7dp"
        android:text="Thêm Sửa Khách Hàng"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_mskh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_mskh"
            style="@style/TextStyle"
            android:hint="Mã số khách hàng"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_hotenKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_hotenKH"
            style="@style/TextStyle"
            android:hint="Họ và tên" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_sodienthoaiKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_sodienthoaiKH"
            style="@style/TextStyle"
            android:hint="Số điện thoại" />
    </android.support.design.widget.TextInputLayout>
    <Spinner
        android:id="@+id/spn_doituong"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"/>

    <RadioGroup
        android:id="@+id/grp_thanhtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">

        <RadioButton
            android:id="@+id/rdo_chuyenkhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Chuyển khoản" />

        <RadioButton
            android:id="@+id/rdo_tienmat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền mặt" />
    </RadioGroup>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_khuvucKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_khuvucKH"
            style="@style/TextStyle"
            android:hint="Khu vực"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_chapnhanThem"
            style="@style/ButtonStyle"
            android:text="Chấp nhận thêm" />


        <Button
            android:id="@+id/btn_chapnhanSua"
            style="@style/ButtonStyle"
            android:text="Chỉnh sửa" />

    </LinearLayout>
</LinearLayout>