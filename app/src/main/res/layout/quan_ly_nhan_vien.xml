<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".giaodien.QuanLyNhanVien"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:layout_marginTop="7dp"
        android:text="Quản lý nhân viên"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_msnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_msnv"
            style="@style/TextStyle"
            android:hint="Mã số nhân viên"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_taikhoanNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_taiKhoanNV"
            style="@style/TextStyle"
            android:hint="Tài khoản" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_matkhauNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_matkhauNV"
            style="@style/TextStyle"
            android:hint="Mật khẩu"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_hotenNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_hotenNV"
            style="@style/TextStyle"
            android:hint="Họ và tên" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_dienthoaiNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_dienthoaiNV"
            style="@style/TextStyle"
            android:hint="Điện thoại" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_diachiNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <EditText
            android:id="@+id/edt_diachiNV"
            style="@style/TextStyle"
            android:hint="Địa chỉ" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spn_quyensd"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_themNV"
            style="@style/ButtonStyle"
            android:text="Thêm" />


        <Button
            android:id="@+id/btn_suaNV"
            style="@style/ButtonStyle"
            android:text="Chỉnh sửa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textIsSelectable="false"
            android:text="STT" />


        <TextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textIsSelectable="false"
            android:text="Họ tên" />


        <TextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textIsSelectable="false"
            android:text="Tài khoản" />

         <TextView
            style="@style/LabelStyle"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textIsSelectable="false"
            android:text="Quyền" />

    </LinearLayout>
    <ListView
        android:id="@+id/lst_nhanvien"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"/>


</LinearLayout>